<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LikeMindsButton">
        <attr name="font_type" format="string" />
        <attr name="text_type" format="string" />
        <attr name="button_type" format="string" />
        <attr name="drawable_type" format="string" />
    </declare-styleable>

    <declare-styleable name="LikeMindsExtendedFAB">
        <attr name="font_Style" format="string" />
    </declare-styleable>

    <declare-styleable name="LikeMindsFAB">
        <attr name="fab_type" format="string" />
    </declare-styleable>

    <declare-styleable name="LikeMindsTextView">
        <attr name="fontType" format="string" />
        <attr name="textType" format="string" />
        <attr name="drawableType" format="string" />
    </declare-styleable>

    <declare-styleable name="LikeMindsEditText">
        <attr name="font_style" format="string" />
        <attr name="et_type" format="string" />
    </declare-styleable>

    <declare-styleable name="ColorSeekBar">
        <attr name="colorSeeds" format="reference" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="barHeight" format="dimension" />
        <attr name="thumbBorderColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AnimatedRecyclerView">
        <attr name="layoutAnimation" format="reference" />
        <attr name="animationDuration" format="integer" />
        <attr name="layoutManagerOrientation" format="integer">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="layoutManagerReverse" format="boolean" />
        <attr name="layoutManagerType" format="integer">
            <enum name="linear" value="0" />
            <enum name="grid" value="1" />
        </attr>
        <attr name="gridLayoutManagerColumns" format="integer" />
    </declare-styleable>

    <declare-styleable name="LikeMindsCheckbox">
        <attr name="set_font_type" format="string" />
    </declare-styleable>

    <declare-styleable name="LikeMindsSwitch">
        <attr name="setFontType" format="string" />
    </declare-styleable>

    <declare-styleable name="LikeMindsRadioButton">
        <attr name="set_font_style" format="string" />
    </declare-styleable>

    <declare-styleable name="LikeMindsChip">
        <attr name="font_look" format="string" />
    </declare-styleable>
</resources>