<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="buttonColor"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp">

        <ImageView
            android:id="@+id/iv_follow_telescope_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lm_chat_ic_follow_telescope"
            tools:ignore="ContentDescription" />


        <com.likeminds.chatmm.theme.customview.LikeMindsTextView
            android:id="@+id/tv_follow_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:text="@string/lm_chat_join_chatroom_message"
            android:textColor="@color/lm_chat_grey"
            android:textSize="14sp"
            app:fontType="regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_follow_telescope_const" />

        <com.likeminds.chatmm.theme.customview.LikeMindsButton
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@{buttonColor}"
            android:gravity="center"
            android:letterSpacing="0"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:text="@string/lm_chat_join_small"
            android:textAllCaps="false"
            android:textColor="@color/lm_chat_white"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            app:font_type="regular"
            app:text_type="normal"
            app:drawable_type="normal"
            app:icon="@drawable/lm_chat_ic_follow_v1"
            app:iconTint="@color/lm_chat_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_follow_const" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>