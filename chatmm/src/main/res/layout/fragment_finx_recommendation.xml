        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/finx_recommendation_background"
            app:layout_constraintEnd_toEndOf="@id/glEndVertical"
            app:layout_constraintStart_toStartOf="@id/glStartVertical"
            app:layout_constraintTop_toTopOf="@id/glStartVertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSearchScrip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/gph_transparent"
                android:drawableStart="@drawable/ic_search_1"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="@string/finx_search_hint"
                android:imeOptions="actionGo"
                android:importantForAutofill="no"
                android:inputType="textAutoComplete"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:singleLine="true"
                android:textColor="@color/emoji_black"
                android:textColorHint="@color/emoji_black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ibClear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ibClear"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="7dp"
                android:src="@drawable/lm_chat_ic_cross_small"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/etSearchScrip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/etSearchScrip"
                app:layout_constraintTop_toTopOf="@id/etSearchScrip"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/pbSearchProgressIndicator"
                style="?android:attr/progressBarStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/lm_chat_blue"
                android:indeterminateTintMode="src_in"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ibClear"
                app:layout_constraintEnd_toEndOf="@id/ibClear"
                app:layout_constraintStart_toStartOf="@id/ibClear"
                app:layout_constraintTop_toTopOf="@id/ibClear"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

