        <RadioGroup
            android:id="@+id/rgOrderType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/tvOrderType"
            app:layout_constraintStart_toEndOf="@id/tvOrderType"
            app:layout_constraintTop_toTopOf="@id/tvOrderType">

            <RadioButton
                android:id="@+id/rbBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Buy" />

            <RadioButton
                android:id="@+id/rbSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Sell" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlEntryPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Entry Price"
            app:layout_constraintEnd_toEndOf="@id/glEndVertical"
            app:layout_constraintStart_toStartOf="@id/glStartVertical"
            app:layout_constraintTop_toBottomOf="@id/rgOrderType">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEntryPriceValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlSlPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="SL Price"
            app:layout_constraintEnd_toStartOf="@id/tlTargetPrice"
            app:layout_constraintStart_toStartOf="@id/glStartVertical"
            app:layout_constraintTop_toBottomOf="@id/tlEntryPrice">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSlPriceValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlTargetPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:hint="Target Price"
            app:layout_constraintEnd_toEndOf="@id/glEndVertical"
            app:layout_constraintStart_toEndOf="@id/tlSlPrice"
            app:layout_constraintTop_toBottomOf="@id/tlEntryPrice">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTargetPriceValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:text="Post"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/glEndVertical"
            app:layout_constraintStart_toStartOf="@id/glStartVertical"
            app:layout_constraintTop_toBottomOf="@id/tlSlPrice" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchScripResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/lm_chat_white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/glEndVertical"
            app:layout_constraintStart_toStartOf="@id/glStartVertical"
            app:layout_constraintTop_toBottomOf="@id/tilSearch"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:itemCount="3"
            tools:listitem="@layout/item_search_scrip_lm" />

        <ProgressBar
            android:id="@+id/pbSearchProgressIndicator"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:elevation="20dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/lm_chat_blue"
            android:indeterminateTintMode="src_in"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/etSearch"
            app:layout_constraintEnd_toEndOf="@id/etSearch"
            app:layout_constraintTop_toTopOf="@id/etSearch" />

    </androidx.constraintlayout.widget.ConstraintLayout>

