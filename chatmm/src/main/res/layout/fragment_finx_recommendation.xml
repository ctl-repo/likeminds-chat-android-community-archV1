                android:textColor="@color/emoji_black" />

            <RadioButton
                android:id="@+id/rbSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/finx_sell"
                android:textColor="@color/emoji_black" />
        </RadioGroup>

